@model ServiceContracts.DTOs.Organization.UpdateOrganizationRequest

@{
    ViewData["Title"] = "Edit Organization";
    Layout = "_DashboardLayout";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Edit Organization</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
        <li class="breadcrumb-item active">Edit Organization</li>
    </ol>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-building me-1"></i>
            Organization Details
        </div>
        <div class="card-body">
            <form asp-controller="OrganizationDashboard" asp-action="Edit" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="OrganizationId" />
                
                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Organization Name</label>
                    <input asp-for="Name" class="form-control" required>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                
                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Description</label>
                    <textarea asp-for="Description" class="form-control" rows="3" required></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                
                <div class="mb-3">
                    <label asp-for="Logo" class="form-label">Logo</label>
                    <input asp-for="Logo" class="form-control" type="file">
                    <small class="form-text text-muted">Leave empty to keep the current logo.</small>
                </div>
                
                <button type="submit" class="btn btn-primary">Save Changes</button>
                <a asp-controller="Dashboard" asp-action="Index" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}