@{
    ViewData["Title"] = "Access Denied";
    Layout = "_DashboardLayout";
}

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-6">
            <div class="card text-center">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">Access Denied</h4>
                </div>
                <div class="card-body">
                    <div class="mb-4">
                        <i class="fas fa-ban text-danger fa-4x"></i>
                    </div>
                    <h5 class="card-title">You don't have permission to access this resource.</h5>
                    <p class="card-text">Please contact your administrator if you believe this is an error.</p>
                    <a asp-controller="Dashboard" asp-action="Index" class="btn btn-primary">Return to Dashboard</a>
                </div>
            </div>
        </div>
    </div>
</div>